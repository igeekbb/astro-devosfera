---
// Remove current url path and remove trailing slash if exists
const currentUrlPath = Astro.url.pathname.replace(/\/+$/, "");

// Get url array from path
// eg: /tags/tailwindcss => ['tags', 'tailwindcss']
const breadcrumbList = currentUrlPath.split("/").slice(1);

// if breadcrumb is Home > Posts > 1 <etc>
// replace Posts with Posts (page number)
if (breadcrumbList[0] === "posts") {
  breadcrumbList.splice(0, 2, `Posts (page ${breadcrumbList[1] || 1})`);
}

// if breadcrumb is Home > Tags > [tag] > [page] <etc>
// replace [tag] > [page] with [tag] (page number)
if (breadcrumbList[0] === "tags" && !isNaN(Number(breadcrumbList[2]))) {
  breadcrumbList.splice(
    1,
    3,
    `${breadcrumbList[1]} ${Number(breadcrumbList[2]) === 1 ? "" : "(page " + breadcrumbList[2] + ")"}`
  );
}
---

<nav class="app-layout mt-6 mb-2" aria-label="breadcrumb">
  <div class="breadcrumb-bar flex items-center gap-1 text-sm">
    {/* Home icon */}
    <a
      href="/"
      class="breadcrumb-link inline-flex shrink-0 items-center transition-colors duration-200 hover:text-accent"
      aria-label="Home"
      title="Home"
    >
      <svg
        class="size-3.5"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        aria-hidden="true"
      >
        <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
        <polyline points="9 22 9 12 15 12 15 22"></polyline>
      </svg>
    </a>
    {
      breadcrumbList.map((breadcrumb, index) => (
        <>
          <span
            class="breadcrumb-sep shrink-0 text-border/40"
            aria-hidden="true"
          >
            <svg
              class="size-3.5"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <polyline points="9 18 15 12 9 6" />
            </svg>
          </span>

          {index + 1 === breadcrumbList.length ? (
            <span
              class:list={[
                "breadcrumb-current truncate font-medium text-accent/80 capitalize",
                { lowercase: index > 0 },
              ]}
              aria-current="page"
            >
              {decodeURIComponent(breadcrumb)}
            </span>
          ) : (
            <a
              href={`/${breadcrumb}/`}
              class="breadcrumb-link shrink-0 capitalize transition-colors duration-200 hover:text-accent"
            >
              {decodeURIComponent(breadcrumb)}
            </a>
          )}
        </>
      ))
    }
  </div>
</nav>

<style>
  .breadcrumb-link {
    color: color-mix(in srgb, var(--foreground) 55%, transparent);
  }

  .breadcrumb-link:hover {
    color: var(--accent);
  }

  .breadcrumb-current {
    max-width: 28ch;
  }
</style>
